<body>
  <div id="loading" class="container">
    <div class="logo">SW</div>
    <div class="spinner"></div>
    <h1>V√©rification en cours...</h1>
    <p>Ouverture automatique de SupplyWise.<br>Vous allez pouvoir r√©initialiser votre mot de passe.</p>
  </div>

  <div id="success" class="container hidden">
    <div class="success-icon">üîë</div>
    <h1>Lien v√©rifi√© !</h1>
    <p>Vous pouvez maintenant r√©initialiser votre mot de passe.</p>
    <button class="button" onclick="openApp()">Ouvrir SupplyWise</button>
  </div>

  <div id="error" class="container hidden">
    <div class="error-icon">‚ö†Ô∏è</div>
    <h1>Erreur de v√©rification</h1>
    <p id="error-message">Une erreur est survenue lors de la v√©rification.</p>
    <button class="button" onclick="openApp()">Ouvrir SupplyWise</button>
    <div id="debug" class="debug-info hidden"></div>
  </div>

  <script>
    const APP_SCHEME = 'supplywise://';
    const CALLBACK_PATH = 'auth-callback';
    const REDIRECT_TIMEOUT = 2000;
    const FALLBACK_TIMEOUT = 3000;

    let redirectAttempted = false;

    function log(message, data = null) {
      console.log(`[Reset Password Redirect] ${message}`, data || '');
      const debugEl = document.getElementById('debug');
      if (debugEl) {
        const logLine = `${message}${data ? ': ' + JSON.stringify(data) : ''}\n`;
        debugEl.textContent += logLine;
        debugEl.classList.remove('hidden');
      }
    }

    function extractParams() {
      const params = {};

      const searchParams = new URLSearchParams(window.location.search);
      for (const [key, value] of searchParams.entries()) {
        params[key] = value;
      }

      const hash = window.location.hash.substring(1);
      if (hash) {
        const hashParams = new URLSearchParams(hash);
        for (const [key, value] of hashParams.entries()) {
          params[key] = value;
        }
      }

      log('Extracted params', params);
      return params;
    }

    function buildDeepLink(params) {
      if (!params.type) {
        params.type = 'recovery';
      }

      const queryString = new URLSearchParams(params).toString();
      const deepLink = `${APP_SCHEME}${CALLBACK_PATH}?${queryString}`;
      log('Built deep link', deepLink);
      return deepLink;
    }

    function openApp() {
      if (redirectAttempted) {
        log('Redirect already attempted, skipping');
        return;
      }

      const params = extractParams();

      const hasTokens = params.access_token || params.token_hash || params.token || params.refresh_token;

      if (!hasTokens) {
        log('Warning: No tokens found in URL', params);
        showError('Aucun token de v√©rification trouv√© dans le lien.');
        return;
      }

      const deepLink = buildDeepLink(params);
      redirectAttempted = true;

      log('Attempting redirect to app for password reset');
      window.location.href = deepLink;

      setTimeout(() => {
        log('Redirect completed or timed out');
        showSuccess();
      }, FALLBACK_TIMEOUT);
    }

    function showSuccess() {
      document.getElementById('loading').classList.add('hidden');
      document.getElementById('error').classList.add('hidden');
      document.getElementById('success').classList.remove('hidden');
    }

    function showError(message) {
      document.getElementById('loading').classList.add('hidden');
      document.getElementById('success').classList.add('hidden');
      document.getElementById('error').classList.remove('hidden');
      document.getElementById('error-message').textContent = message;
    }

    let pageHidden = false;
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        pageHidden = true;
        log('Page hidden - app likely opened');
      }
    });

    window.addEventListener('beforeunload', () => {
      log('Page unloading - app likely opened');
    });

    window.addEventListener('DOMContentLoaded', () => {
      log('Page loaded, initiating password reset redirect');

      const params = extractParams();

      if (Object.keys(params).length === 0) {
        log('No params found');
        showError('Aucun param√®tre trouv√© dans le lien. Le lien peut √™tre invalide ou expir√©.');
        return;
      }

      setTimeout(() => {
        openApp();
      }, 500);
    });

    window.addEventListener('error', (event) => {
      log('Global error', event.error);
    });
  </script>
